<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pozadina"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".KorakPoKorakActivity"
    tools:ignore="ExtraText">

    <LinearLayout
        android:id="@+id/igrac1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/igrac2"
        app:layout_constraintHorizontal_chainStyle="spread">

        <ImageView
            android:layout_width="43dp"
            android:layout_height="35dp"
            android:src="@drawable/igrac_ic" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Igrac 1"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_marginStart="8dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/igrac2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/igrac1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_chainStyle="spread">

        <ImageView
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:src="@drawable/igrac_ic"
           />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Igrac 2"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_marginStart="8dp"/>

    </LinearLayout>


    <TextView
        android:id="@+id/naslovIgre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:text="Korak po korak"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/igrac1" />

    <EditText
        android:id="@+id/korak1"
        android:layout_width="296dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="109dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="92dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:hint="prvi korak"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/naslovIgre" />

    <EditText
        android:id="@+id/korak2"
        android:layout_width="296dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="drugi korak"
        app:layout_constraintEnd_toEndOf="@+id/korak1"
        app:layout_constraintStart_toStartOf="@+id/korak1"
        app:layout_constraintTop_toBottomOf="@+id/korak1" />

    <EditText
        android:id="@+id/korak3"
        android:layout_width="296dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:hint="treci korak"
        app:layout_constraintEnd_toEndOf="@+id/korak2"
        app:layout_constraintStart_toStartOf="@+id/korak2"
        app:layout_constraintTop_toBottomOf="@+id/korak2" />

    <EditText
        android:id="@+id/korak4"
        android:layout_width="296dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:hint="cetvrti korak"
        app:layout_constraintEnd_toEndOf="@+id/korak3"
        app:layout_constraintStart_toStartOf="@+id/korak3"
        app:layout_constraintTop_toBottomOf="@+id/korak3" />

    <EditText
        android:id="@+id/korak5"
        android:layout_width="296dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:hint="peti korak"
        app:layout_constraintEnd_toEndOf="@+id/korak4"
        app:layout_constraintStart_toStartOf="@+id/korak4"
        app:layout_constraintTop_toBottomOf="@+id/korak4" />

    <EditText
        android:id="@+id/korak6"
        android:layout_width="296dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:hint="sesti korak"
        app:layout_constraintEnd_toEndOf="@+id/korak5"
        app:layout_constraintStart_toStartOf="@+id/korak5"
        app:layout_constraintTop_toBottomOf="@+id/korak5" />

    <EditText
        android:id="@+id/korak7"
        android:layout_width="296dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:hint="sedmi korak"
        app:layout_constraintEnd_toEndOf="@+id/korak6"
        app:layout_constraintStart_toStartOf="@+id/korak6"
        app:layout_constraintTop_toBottomOf="@+id/korak6" />

    <EditText
        android:id="@+id/upisiPojam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="97dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="104dp"
        android:ems="10"
        android:hint="Upisi pojam"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/korak7" />
</androidx.constraintlayout.widget.ConstraintLayout>

